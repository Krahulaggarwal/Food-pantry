<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/RAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age : 35"
            app:layout_constraintBottom_toTopOf="@+id/RContactNumber"
            app:layout_constraintStart_toStartOf="@+id/RContactNumber"
            app:layout_constraintTop_toBottomOf="@+id/RLabourName"></TextView>

        <TextView
            android:id="@+id/RLabourName"
            android:layout_width="132dp"
            android:layout_height="18dp"
            android:text="Name : Rohan Bondre"
            app:layout_constraintBottom_toTopOf="@+id/RAge"
            app:layout_constraintStart_toStartOf="@+id/RAge"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/RContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact : 9897654321"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RAge"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="91dp"></TextView>

        <Button
            android:id="@+id/Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="ACCEPT"
            app:layout_constraintBottom_toTopOf="@+id/Reject"
            app:layout_constraintEnd_toEndOf="@+id/Reject"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/Reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="REJECT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Accept"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="272dp"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>